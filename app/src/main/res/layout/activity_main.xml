<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- This text box will show our Login Text label-->
    <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Login Stuff"/>

    <!-- This EditText lets the user enter their username -->
    <EditText
            android:id="@+id/username_text"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_text"
            android:layout_height="wrap_content"/>

    <!-- This EditText lets the user enter their password -->
    <EditText
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_text"
            android:layout_height="wrap_content"/>

    <!-- These checkboxes will let the user save their username/password
    for future logins -->
    <CheckBox
            android:id="@+id/save_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_text"/>
    <CheckBox
            android:id="@+id/save_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/save_username"/>

    <!-- We need a way for the user to submit their info, so we'll add this button -->
    <Button
            android:id="@+id/submit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Submit"
            android:drawableStart="@drawable/sanic"
            android:drawableEnd="@drawable/sanic"
            app:layout_constraintTop_toBottomOf="@id/save_password"/>
</androidx.constraintlayout.widget.ConstraintLayout>